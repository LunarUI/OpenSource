contentCorner.CornerRadius = UDim.new(0, 8)

-- Pages storage
local pages = {}

local function showPage(name)
    for pageName, frame in pairs(pages) do
        frame.Visible = (pageName == name)
    end
end

local function makeSideButton(name)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -20, 0, 36)
    btn.BackgroundColor3 = Color3.fromRGB(60, 55, 75)
    btn.BorderSizePixel = 0
    btn.Font = Enum.Font.SourceSansSemibold
    btn.Text = name
    btn.TextSize = 18
    btn.TextColor3 = Color3.fromRGB(240, 240, 240)
    btn.Parent = sidebar
    local corner = Instance.new("UICorner", btn)
    corner.CornerRadius = UDim.new(0, 8)
    
    btn.MouseButton1Click:Connect(function()
        showPage(name)
    end)
    
    return btn
end

-- Utility: Gradient function
local function applyGradient(frame, colors)
    local grad = Instance.new("UIGradient")
    grad.Color = ColorSequence.new(colors)
    grad.Rotation = 0
    grad.Parent = frame

    -- Animate gradient rotation
    RunService.Heartbeat:Connect(function(dt)
        grad.Rotation = (grad.Rotation + 20 * dt) % 360
    end)
end

