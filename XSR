--[[
UI Lib Base Layout (Animated Gradient Boxes)
- Draggable + Minimize + Exit
- Home Page: Profile + Executor + Server Info + Connections + Game Info
- Gradient colors:
  * Profile: Red → Black
  * Executor: Goldish Brown → Black
  * Server Info: Blue → Black
  * Connections: Yellow → Black
  * Game Info: Purple → Black
--]]

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local MarketplaceService = game:GetService("MarketplaceService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "Cresent XSR"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 500, 0, 320)
mainFrame.Position = UDim2.new(0.5, -250, 0.5, -160)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 22, 32)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui
local mainCorner = Instance.new("UICorner", mainFrame)
mainCorner.CornerRadius = UDim.new(0, 12)

-- Title Bar
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0, 40)
titleBar.BackgroundColor3 = Color3.fromRGB(40, 35, 50)
titleBar.BorderSizePixel = 0
titleBar.Parent = mainFrame
local titleCorner = Instance.new("UICorner", titleBar)
titleCorner.CornerRadius = UDim.new(0, 12)

local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, -100, 1, 0)
titleLabel.Position = UDim2.new(0, 40, 0, 0) -- shifted to the right to make space for the logo
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Cresent XSR"
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 24
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextXAlignment = Enum.TextXAlignment.Left
titleLabel.Parent = titleBar

-- Logo (crescent) — small icon on the top-left of title bar
local logo = Instance.new("ImageLabel")
logo.Size = UDim2.new(0, 28, 0, 28) -- small size
logo.Position = UDim2.new(0, 8, 0.5, -14) -- left of title text
logo.BackgroundTransparency = 1
logo.Image = "rbxassetid://100654622343267"
logo.Parent = titleBar

-- Glow effect for logo
local uiStroke = Instance.new("UIStroke")
uiStroke.Thickness = 1.5
uiStroke.Color = Color3.fromRGB(180, 120, 255) -- base purple
uiStroke.Parent = logo

-- Animate pulsing glow
task.spawn(function()
    while true do
        local tweenIn = TweenService:Create(uiStroke, TweenInfo.new(0.6, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {
            Thickness = 3,
            Color = Color3.fromRGB(220, 200, 255) -- brighter whitish purple
        })
        local tweenOut = TweenService:Create(uiStroke, TweenInfo.new(0.6, Enum.EasingStyle.Sine, Enum.EasingDirection.In), {
            Thickness = 1.5,
            Color = Color3.fromRGB(180, 120, 255) -- back to base purple
        })
        tweenIn:Play()
        tweenIn.Completed:Wait()
        tweenOut:Play()
        tweenOut.Completed:Wait()
        task.wait(0.2)
    end
end)

